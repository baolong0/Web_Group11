                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- 6.Video highlight -->
    <div class="sectionVideo box">
        <div class="TĐ">
            <h3>Video</h3>
        </div>
    </div>

    <div class="container">
        <div class="row Video">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        <div class="row">
                            <div class="card mb-3" style="max-width: 540px;">
                                <a asp-action="DetailsVideo" asp-route-id="@Model.tinVideos[0].IdTinVideo">
                                    <div class="row no-gutters mt-3 ml-3">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <h5 class="card-title">@Model.tinVideos[0].TieuDeVideo</h5>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 mb-1">
                                                <img src="@Model.tinVideos[0].AvatarVideo" height="100%" width="100%" class="card-img img-fluid" alt="...">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <p class="card-text">@Model.tinVideos[0].TomTatVideo</p>
                                                    <p class="card-text"><small class="text-muted">Last updated time</small></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="card mb-3" style="max-width: 540px;">
                                <a asp-action="DetailsVideo" asp-route-id="@Model.tinVideos[1].IdTinVideo">
                                    <div class="row no-gutters mt-3 ml-3">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <h5 class="card-title">@Model.tinVideos[1].TieuDeVideo</h5>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 mb-1">
                                                <img src="@Model.tinVideos[1].AvatarVideo" height="100%" width="100%" class="card-img img-fluid" alt="...">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <p class="card-text">"@Model.tinVideos[0].TomTatVideo</p>
                                                    <p class="card-text"><small class="text-muted">Last updated time</small></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        <div class="row">
