@model TinTucViewsModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/tintuc.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <title>Tin tức</title>
</head>
<body>
    <!-- hashtag -->
    <div class="container Tintuc">
        <div class="row mt-3 mb-3 ml-5 mr-5">
            <h1>Tin Tức</h1>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-1">

                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10">
                    <article>
                        <p>
                            @foreach (var item in Model.Hashtags)
                            {
                                <a href="" type="button" class="btn btn-outline-primary btn-sm">@item.Hashtag1</a>
                            }
                        </p>
                    </article>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-1">

                </div>

            </div>

        </div>
    </div>

    <!-- 3.Tin hot -->
    <div class="sectionTH box">
        <div class="TĐ">
            <h3>Tin hot</h3>
        </div>
    </div>
    <div class="container">
        <div class="row Tinhot ">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 Tinhot">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">

                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="card">
                                    <a asp-action="Details" asp-route-id="@Model.TintucHots[0].IdTinTuc">
                                        <img src="@Model.TintucHots[0].Avatar" class="img-fluid" height="370" class="card-img-top" alt="Tin hot">
                                        <div class="card-body">
                                            <p class="card-text">
                                                @Model.TintucHots[0].TieuDe
                                            </p>
                                        </div>
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">

                        <div class="row">

                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <div class="card mb-3">
                                    <a asp-action="Details" asp-route-id="@Model.TintucHots[1].IdTinTuc">
                                        <img src="@Model.TintucHots[1].Avatar" class="img-fluid" height="370" class="card-img-top" alt="Tin hot">
                                        <div class="card-body">
                                            <p class="card-text">
                                                @Model.TintucHots[1].TieuDe
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <div class="card mb-33">
                                    <a asp-action="Details" asp-route-id="@Model.TintucHots[2].IdTinTuc">
                                        <img src="@Model.TintucHots[2].Avatar" class="img-fluid" height="370" class="card-img-top" alt="Tin hot">
                                        <div class="card-body">
                                            <p class="card-text">
                                                @Model.TintucHots[2].TieuDe
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>


                        </div>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <div class="card mb-33 ">
                                    <a asp-action="Details" asp-route-id="@Model.TintucHots[3].IdTinTuc">
                                        <img src="@Model.TintucHots[3].Avatar" class="img-fluid" height="370" class="card-img-top" alt="Tin hot">
