                        <ul class="achievement">
                            <h5>Thành tích đạt được:</h5>
                            <li>
                                <ul class="achievement-small">
                                    <h5>1. Đội tuyển 1 SLNA:</h5>
                                    @foreach (var item in Model.ThanhTichLoai1)
                                    {
                                        if (item.value != null)
                                        {
