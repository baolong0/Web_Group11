                    <h2>Giới thiệu</h2>
                    <!--Ảnh bìa đội bóng-->
                    <div class="team-banner">
                        <figure>
                            <img class="img-fluid" src="@Model.Doibong.SourceBanner" alt="SLNA FC" />
                            <figcaption><strong>@Model.Doibong.TenDoi</strong></figcaption>
                        </figure>
                    </div>

                    <!--Thông tin liên quan-->
                    <div class="related-information">
                        <p>Địa chỉ :@Model.thongtincoban.DiaChi</p>
                        <p>Hotline :@Model.thongtincoban.Hotline</p>
                        <p>Email: @Model.thongtincoban.Email</p>
                        <p><strong>Website: </strong><a href="@Model.thongtincoban.Website" target=_blank>www.slnafc.com</a></p>
                        <p>Sân vận động: <strong>@Model.thongtincoban.SanVanDong</strong></p>
                        <p>Sức chứa: @Model.thongtincoban.SucChua</p>
                        <p>Chủ tịch CLB: Ông <strong>@Model.thongtincoban.ChuTichClb</strong></p>
                        <p>GĐĐH: Ông <strong>@Model.thongtincoban.Gđdh</strong></p>
                        <p>HLV trưởng: Ông <strong>@Model.thongtincoban.Hlvtruong</strong></p>
                        <p>GĐKT: Ông <strong>@Model.thongtincoban.Gđkt</strong></p>
                        <p>Nhà tài trợ chính: <strong>@Model.thongtincoban.NhaTaiTro</strong></p>
                    </div>
                    <br>

