@model Web_11.Models.data.TinTucTemp

@{
    Layout = null;
    int Step = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateTinTuc</title>
</head>
<body>

    <h4>Tintuc</h4>
    <hr />
    @switch (Step)
    {
        case 0:
            {
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="CreateTinTucTemp">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdTinTuc" class="control-label"></label>
                                <input asp-for="IdTinTuc" class="form-control" />
                                <span asp-validation-for="IdTinTuc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TieuDe" class="control-label"></label>
                                <input asp-for="TieuDe" class="form-control" />
                                <span asp-validation-for="IdTinTuc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TomTat" class="control-label"></label>
                                <input asp-for="TomTat" class="form-control" />
                                <span asp-validation-for="TomTat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Avatar" class="control-label"></label>
                                <input asp-for="Avatar" class="form-control" />
                                <span asp-validation-for="Avatar" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LuotXem" class="control-label"></label>
                                <input asp-for="LuotXem" class="form-control" placeholder="0" />
                                <span asp-validation-for="LuotXem" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LuotTuongTac" class="control-label"></label>
                                <input asp-for="LuotTuongTac" class="form-control" placeholder="0" />
                                <span asp-validation-for="LuotXem" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TrangThaiHienThi" class="control-label"></label>
                                <input type="checkbox" asp-for="TrangThaiHienThi" class="form-control" checked />
                                <span asp-validation-for="TrangThaiHienThi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TrangThaiHienThi" class="control-label"></label>
                                <input type="checkbox" asp-for="TrangThaiHienThi" class="form-control" checked />
                                <span asp-validation-for="TrangThaiHienThi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TextNoiDung[1]" class="control-label"></label>
                                <input type="checkbox" asp-for="TrangThaiHienThi" class="form-control" checked />
                                <span asp-validation-for="TrangThaiHienThi" class="text-danger"></span>
                            </div>
                        </form>
                    </div>                   
                </div>
            }
            break;
        case 1:
            {
                <h1>Qua Step 2 đc r nhe</h1>
                <a class="btn-dark" onclick="@Step=2">Next</a>
            }
            break;
        case 2:
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            }
            break;
        default:
            {<h1>Lỗi Không xác định</h1>}
            break;
    }

</body>
</html>
